{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "system",
        "target": "es5",
        "noImplicitAny": false,
        "removeComments": false,
        "moduleResolution": "node",
        "outDir": "build/app",
        "rootDir": ".",
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,        
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "files": [
        "app/**/*.ts"
    ],
    "include": [
        "app/**/*.ts"
    ],
    "exclude": [
        "node_modules/*",
        "build",
        "dist",
        "typings/index.d.ts",
        "typings/globals"
    ]
}
